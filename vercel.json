{
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ],
    "headers" : [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self', font-src 'self', style-src 'self'"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "SAMEORIGIN"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "geolocation=(self), vibrate=()"
                },
                {
                    "key": "Feature-Policy",
                    "value": "geolocation 'self'; vibrate 'none'; microphone 'none'; camera 'none'"
                }
            ]
        }
    ]
}